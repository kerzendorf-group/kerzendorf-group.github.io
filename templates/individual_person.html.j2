<html>
    <head>
        <title> {{ general.website_title }} </title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
        <link rel="stylesheet" href="../assets/css/main.css" />
        <link rel="stylesheet" href="../assets/css/card.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    </head>
    <body class="right-sidebar is-preload">
        <div id="page-wrapper">
            <!-- Header -->
            <div id="header-wrapper">
                <div id="header" class="container">
                    <!-- Nav -->
                    <nav id="nav">
                        <ul>
                            <li>
                                {% for page in general["navigation_bar"] %}
                            <li>
                                <a href="../{{ page_link(page) }}.html">{{ page }}</a>
                                {% if page in general %}
                                <ul>
                                    {% for sub_page in general[page] %}
                                    <li><a href="..sub_research/{{ page_link(sub_page) }}.html">{{sub_page}}</a></li>
                                    {% endfor %}
                                </ul>
                                {% endif %}
                            </li>
                            {% endfor %}
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Features 1 -->
        <div class="wrapper">
            <div class="container" id="main">
                <div class="row gtr-150">
                    <div >
                        <section class="col-6 col-12-narrower feature">
                            <div class="image-wrapper" style="width:25%; margin:auto;" >
							 <section>
                                <a href="#" class="image featured"><img src="../{{ person.image_path }}" alt="" /></a>
                            </section>
                            </div>
                            <header>
                                <h2> {{ person.name }} </h2>
                            </header>
                            <p> About Me:</p>
                            <p> {{ person.introduction  }}</p>
                        </section>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->
        <div id="footer-wrapper" >
            <div id="footer">
                <section id="footer">
                    <div style="padding-left: 5%;" >
                        <h6 class="icon maps fa-map"> {{ general.address }}</h6>
                    </div>
                </section>
            </div>
        </div>
        <!-- Scripts -->
        <script src="../assets/js/jquery.min.js"></script>
        <script src="../assets/js/jquery.dropotron.min.js"></script>
        <script src="../assets/js/browser.min.js"></script>
        <script src="../assets/js/breakpoints.min.js"></script>
        <script src="../assets/js/util.js"></script>
        <script src="../assets/js/main.js"></script>
    </body>
</html>